package Aula2.exemplo;


import java.util.Scanner;


public class exercicio3 {


   public static void main(String[] args){


       Scanner ler = new Scanner(System.in);
       System.out.println("Digite sua primera nota bimestral: ");
       float nota1 = ler.nextFloat();
       System.out.println("Digite sua segunda nota bimestral: ");
       float nota2 = ler.nextFloat();
       System.out.println("Digite sua terceira nota bimestral: ");
       float nota3 = ler.nextFloat();
       System.out.println("Digite sua quarta nota bimestral: ");
       float nota4 = ler.nextFloat();
       float media = (nota1+nota2+nota3+nota4)/4;
       System.out.println("A média é "+media);


   }


}
