package Aula2.exemplo;


import java.util.Scanner;


public class Exercicio6 {


   public static void main(String[] args){


       Scanner ler = new Scanner(System.in);
       System.out.println("Quanto você recebe por hora? ");
       float recebe = ler.nextFloat();
       System.out.println("Digite quantas horas você trabalha por mês: ");
       float horas = ler.nextFloat();
       float salario = recebe*horas;
       System.out.println("Seu salário é de: "+salario);
   }
}

