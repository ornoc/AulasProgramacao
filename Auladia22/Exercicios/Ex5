

//Escreva um algoritmo para ler as notas da 1a. e 2a. avaliações
// de um aluno, calcular e imprimir a média (simples) desse aluno.
// Só devem ser aceitos valores válidos durante a leitura de  cada nota (notas válidas: 0.0 a 10.0).


import java.util.Scanner;


public class Ex5 {
   public static void main(String[] args){
       Scanner ler = new Scanner(System.in);
       int cont=0;
       System.out.println("Digite a primeira nota: ");
       int nota1 = ler.nextInt();
       System.out.println("Digite a segunda nota: ");
           int nota2 = ler.nextInt();
           if (nota1 >= 0 && nota1 <= 10 && nota2 >= 0 && nota2 <= 10) {
           int media = (nota1 + nota2) / 2;
           System.out.println15("A media do aluno é de: " + media);
       }
       else{
           System.out.println("Notas inválidas.");
       }
   }
}
